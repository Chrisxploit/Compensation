    .card {
      background: #ffffff;
      width: 90%;
      max-width: 420px;
      border-radius: 25px;
      padding: 25px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
      text-align: center;
      position: relative;
      z-index: 2;
    }

    h1 { color: #ff5c8a; }
    p { color: #555; line-height: 1.6; }

    .notes {
      margin-top: 20px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .note {
      background: #fff3f8;
      border-radius: 15px;
      padding: 12px;
      font-size: 0.9rem;
    }

    .heart {
      font-size: 2rem;
      margin: 15px 0;
      animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.2); }
      100% { transform: scale(1); }
    }

    .buttons {
      margin-top: 25px;
