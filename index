    .message {
      margin-top: 20px;
      font-size: 1.1rem;
      color: #ff5c8a;
      display: none;
    }

    @keyframes float {
      0% { transform: translateY(0); opacity: 1; }
      100% { transform: translateY(-120vh); opacity: 0; }
    }

